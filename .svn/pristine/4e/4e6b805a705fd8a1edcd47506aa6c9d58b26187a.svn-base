* {
    padding: 0;
    margin: 0;
}

*, ::before, ::after {
    margin: 0;
    padding: 0;
    /*清除移动端默认的点击高亮效果*/
    -webkit-tap-highlight-color: transparent;
    /*设置以边框开始计算宽度*/
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

body {
    font-size: 16px;
    color: #333;
    margin: 0;
    background-color: #f8f8f8;
}

input::-webkit-input-placeholder{
    font-size: 16px;
}

a {
    color: #333;
    text-decoration: none;
}

a:hover {
    text-decoration: none;
}

ul, ol {
    list-style: none;
}

img {
    width: 100%;
    height: 100%;
}

input {
    border: none;
    outline: none;
    /*清除移动端默认的表单样式*/
    -webkit-appearance: none;
}
input,button,select,textarea{outline:none;}

/*common css*/
.fl {
    float: left;
}

.fr {
    float: right;
}

/*公共样式*/
::-webkit-scrollbar{
    display:none;
}
